-- 3 criando Tabelas
CREATE TABLE Paciente (
paciente_id INT AUTO_INCREMENT PRIMARY KEY,
nome VARCHAR(100) NOT NULL,
data_nascimento DATE NOT NULL,
telefone VARCHAR(20),
endereco TEXT, 
email VARCHAR(100)
);
CREATE TABLE Dentista (
dentista _id INT AUTO_INCREMENTE PRIMARY KEY,
nome VARCHAR(100) NOT NULL,
especialidade VARCHAR(50),
telefone VARCHAR(20),
email VARCHAR(100)
);
CREATE TABLE Consulta (
consulta_id AUTO_INCREMENTE PRIMARY KEY,
paciente_id INT,
dentista_id INT,
data_consulta DATETIME,
FOREIGH KEY (paciente_id) REFECENCES Paciente(paciente_id),
FOREIGH KEY (dentista) REFERENCES Dentista (dentista_id) 
);
